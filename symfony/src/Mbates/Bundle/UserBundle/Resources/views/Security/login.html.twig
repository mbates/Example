{% extends 'MbatesUserBundle::layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="row login">

    <div class="col-sm-6 col-sm-offset-4 col-md-4 col-md-offset-4">

        {% if error %}
            <div class="alert alert-danger fade in"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>{{ error.message|trans }}</div>
        {% endif %}

        <div class="login-panel">

            <img src="img/login-logo.png" alt="Mbates Example" class="logo" />

            <form action="{{ path("fos_user_security_check") }}" method="post">
            
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <input type="text" id="username" class="form-control" placeholder="{{ 'security.login.username'|trans }}" name="_username" value="{{ last_username }}" required="required" />

                <input type="password" id="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" name="_password" required="required" />

                <div class="form-group checkbox-group">
                    <input type="checkbox" id="remember_me" class="form-control checkbox" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>

                <button class="btn btn-lg btn-primary btn-block">{{ 'security.login.submit'|trans }}</button>
            </form>


        </div>

    </div>

</div>
{% endblock fos_user_content %}